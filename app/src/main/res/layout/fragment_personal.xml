<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="620dp"
android:orientation="vertical"
tools:context=".fragments.BodyFragment"
android:id="@+id/fl_body">


    <ProgressBar
        android:id="@+id/pb_spinner"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:indeterminateTint="@color/main"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:text="MY SNIPS"
        android:fontFamily="@font/bukhari"
        android:textColor="@color/main"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="Public Snips"
        android:fontFamily="@font/bukhari"
        android:textColor="@color/main"
        android:textAlignment="textStart"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/snip_display"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="Private Snips"
        android:fontFamily="@font/bukhari"
        android:textColor="@color/main"
        android:textAlignment="textStart"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/snip_display_private"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
</LinearLayout>